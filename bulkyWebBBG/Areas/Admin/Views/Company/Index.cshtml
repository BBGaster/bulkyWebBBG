﻿@using Bulky.Models.Models
@model List<Company>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" class="btn btn-primary"> Crete New Company <i class="bi bi-plus"></i></a>
        </div>

    </div>
    <table id="tblData" class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Name</th>
                <th>Street Adress</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>

    

    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}