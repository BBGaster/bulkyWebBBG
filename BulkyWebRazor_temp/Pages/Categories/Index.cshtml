@page
@model BulkyWebRazor_temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary"> Crete New Category <i class="bi bi-plus"></i></a>
        </div>

    </div>
    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Display order
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-dash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>


    </table>
