@page
@model BulkyWebRazor_temp.Pages.Categories.EditModel

<form method="post">
    <input asp-for="Cate.Id" hidden />
    <div class="border p-3 mt-3">

        <div class="row pb-2">
            <h2 class="text-primary"> Category Create</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3 row">
            <label asp-for="Cate.Name" class="p-0"></label>
            <input asp-for="Cate.Name" class="form-control" />
            <span asp-validation-for="Cate.Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Cate.DisplayOrder" class="p-0"></label>
            <input asp-for="Cate.DisplayOrder" class="form-control" />
            <span asp-validation-for="Cate.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>
@section Scripts {

    @{
        //per usare una partial view legata a scrpts
        <partial name="_ValidationScriptsPartial" />
        //non script partial possono essere messe direttamente nel cshtml
    }
}